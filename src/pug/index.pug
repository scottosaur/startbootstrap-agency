    body#page-top

        // Navigation
        nav#mainNav.navbar.navbar-expand-lg.navbar-dark.fixed-top
            .container
                a.navbar-brand(href='index.html#page-top')
                    img(src='assets/img/navbar-logo.svg', alt='...')
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                    | Menu
                    i.fas.fa-bars.ms-1
                #navbarResponsive.collapse.navbar-collapse
                    ul.navbar-nav.text-uppercase.ms-auto.py-4.py-lg-0
                        li.nav-item
                            a.nav-link(href='our-story.html') Our Story
                        li.nav-item
                            a.nav-link(href='location.html') Location
                        li.nav-item
                            a.nav-link(href='timeline.html') Timeline
                        li.nav-item
                            a.nav-link(href='q+a.html') Q + A
                        li.nav-item
                            a.nav-link(href='rsvp.html') RSVP
                        
        // Masthead
        header.masthead
            .container
                .masthead-subheading On June 24th, 2023
                .masthead-heading.text-uppercase Let's Get Married!
                //- a.btn.btn-primary.btn-xl.text-uppercase(href='#details') Tell Me More

        // Greeting
        #greeting.container
            .row
                .col
                .col-8.text-center
                    p.lead Thank you for being such a special part of our lives as we take time to celebrate our love. We are so excited for you to be a part of our wedding day. 
                    p.lead Scott + Kestelle
                .col

        // Details
        section#details.page-section
            .container
                .text-center
                    h2.section-heading.text-uppercase   
                    h3.section-subheading.text-muted  
                    //- h3.section-subheading.text-muted Here's what to expect on the big day.
                .row.text-center
                    .col-md-4
                        a.span.fa-stack.fa-4x(href='location.html')
                            i.fas.fa-square.fa-stack-2x.text-primary
                            i.fas.fa-map-location-dot.fa-stack-1x.fa-inverse
                        h4.my-3 Location
                    .col-md-4
                        a.span.fa-stack.fa-4x(href='q+a.html')
                            i.fas.fa-square.fa-stack-2x.text-primary
                            i.fas.fa-question.fa-stack-1x.fa-inverse
                        h4.my-3 Q+A
                    .col-md-4
                        a.span.fa-stack.fa-4x(href='RSVP.html')
                            i.fas.fa-square.fa-stack-2x.text-primary
                            i.fas.fa-envelope.fa-stack-1x.fa-inverse
                        h4.my-3 RSVP

