                            img(src="assets/img/slideshow-3.jpg" alt="...").d-block.w-100
                        .carousel-item
                            img(src="assets/img/slideshow-4.jpg" alt="...").d-block.w-100
                        .carousel-item
                            img(src="assets/img/slideshow-5.jpg" alt="...").d-block.w-100
                        .carousel-item
                            img(src="assets/img/slideshow-6.jpg" alt="...").d-block.w-100
                        .carousel-item
                            img(src="assets/img/slideshow-7.jpg" alt="...").d-block.w-100
                        .carousel-item
                            img(src="assets/img/slideshow-8.jpg" alt="...").d-block.w-100
                
                    button.carousel-control-prev(data-bs-target="#carousel-slideshow" role="button" data-bs-slide="prev")
                        span.carousel-control-prev-icon(aria-hidden="true")
                        span.sr-only Previous
                    button.carousel-control-next(data-bs-target="#carousel-slideshow" role="button" data-bs-slide="next")
                        span.carousel-control-next-icon(aria-hidden="true")
                        span.sr-only Next
                
