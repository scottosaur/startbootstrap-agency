        // Our Story
        section#our-story.page-section
            .container.extra-margin
                .text-center
                    h2.section-heading Our Story
                    h3.section-subheading.text-muted  
                    //- h3.section-subheading.text-muted Lorem ipsum dolor sit amet consectetur.

            .container.m5
                .row
                    .col-md-3
                    .col-md-2.col-5
                        img(src='assets/img/engagement.jpg').img-fluid
                    .col-md-4.col-7
                        span.lead.align-middle Text about us. Our relationship, how we met, etc etc. Everybody will love it. More text here.
                    .col-md-3





            .container.mt-5
                #carousel-slideshow.carousel.slide(data-ride="carousel")
                    .carousel-inner
                        .carousel-item.active
                            img(src="assets/img/slideshow-1.jpg" alt="...").d-block.w-100
                        //- .carousel-item
                        //-     img(src="assets/img/slideshow-2.jpg" alt="...").d-block.w-100
